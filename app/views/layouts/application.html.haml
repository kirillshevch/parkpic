!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Parkform
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %script(type="text/javascript")
      window.anonimusUser = #{!user_signed_in?}
  %body(ng-app="app" ng-controller="mainCtrl")
    .table.fixed.content.bg-light(ng-if="ready")
      //%left-aside(user="user" treads="treads")
      .table-cell.cell-9em-2x.align-top.bg-light.aside
        .text-center.clearfix
          %a.col-12.head-lg.gutter-top.logo(href="/#/")=icon :palm
        .gutter-horizontal.font-light.text-md
          .gutter-vertical.row-horizontal
            .border-top.border-wheat
              .gutter-horizontal.border-bottom.border-wheat(ng-if="!user")
                %a.gutter-vertical-sm.col-12(ng-href="/sign_in") Sign in
              .gutter-horizontal.border-bottom.border-wheat(ng-if="!user")
                %a.gutter-vertical-sm.col-12(ng-href="/sign_up") Sign up
              .gutter-horizontal.border-bottom.border-wheat(ng-if="user")
                %a.gutter-vertical-sm.col-12(ng-href="/members/{{user.id}}") My Profile
              .gutter-horizontal.border-bottom.border-wheat(ng-if="user")
                %a.gutter-vertical-sm.col-12(ng-href="/members") Users
              .gutter-horizontal.border-bottom.border-wheat(ng-if="user")
                %a.gutter-vertical-sm.col-12(ng-href="/settings") Settings
              .gutter-horizontal.border-bottom.border-wheat(ng-if="user")
                %a.gutter-vertical-sm.col-12(ng-href="/sign_in" ng-click="logout()") Sign out
      .table-cell.auto.content-center.align-top.relative.bg-white
        .table.fixed
          .table-cell.gutter-vertical.gutter-horizontal(ng-view)
