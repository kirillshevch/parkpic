%h1 Members
%p You:
%member-info(user="user")
.clearfix
  .clearfix
    %span(ng-repeat="member in members track by $index")
      .col-xs-3
        .text-line
          .userpic
            %img(ng-src="{{::member.avatar.url}}")
          %a(ng-href="/members/{{member.id}}") {{member.email}}
      .col-12(ng-if="($index + 1) % 4 == 0")

  .gutter-vertical-2x
    %pagination(page="page" per-page="25" items-count="count")

